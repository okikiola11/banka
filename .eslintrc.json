{
    "extends": "airbnb-base",
    "env": {
        "mocha": true,
        "node": true,
        "browser": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}